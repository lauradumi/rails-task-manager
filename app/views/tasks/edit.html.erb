
<div class="container">

<h1>Edit <%= @task.title %></h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% unless @task.new_record? %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>




<p><%= link_to "Cancel", tasks_path %></p>

</div>
