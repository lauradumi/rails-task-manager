

<div class="container">

<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed?%>
      <i class="fa-regular fa-square-check"></i>
    <% else  %>
      <i class="fa-regular fa-square"></i>
    <% end %>
    <li><%= link_to task.title, task_path(task.id) %></li>
    <% end %>
</ul>

<p><%= link_to "Add a new task", new_path %></p>


</div>
